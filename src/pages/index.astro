---
import Badge from "../components/Badge.astro";
import Layout from "../layouts/Layout.astro";
import SocialPill from "../components/SocialPill.astro";
import LinkedInIcon from "../icons/LinkedIn.astro";
import GitHubIcon from "../icons/GitHub.astro";
import EmailIcon from "../icons/Email.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import BriefcaseIcon from "../icons/Briefcase.astro";
import CodeIcon from "../icons/Code.astro";
import Projects from "../components/Projects.astro";
import AboutMe from "../components/AboutMe.astro";
import UserIcon from "../icons/User.astro";
import Contact from "../components/Contact.astro";
---

<Layout
  title="Santiago Barragan Real | Software & Web Developer"
  description="Personal portfolio of Santiago Barragan Real, a self-taught frontend developer focused on building modern, performant, and user-friendly web applications."
>
  <main class="px-4">
    <SectionContainer class="py-44 pb-32">
      <div class="flex gap-4 mb-6">
        <img
          src="/santiago-logo.webp"
          alt="Santiago Logo"
          class="rounded-full size-16"
        />
        <Badge
          href="https://www.linkedin.com/in/santiago-barragan-real"
          text="Available to work!"
          spinSeconds={3}
        />
      </div>

      <h1
        class="text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-10 text-slate-900 dark:text-white"
      >
        Hey, I'm Santiago
      </h1>
      <h2 class="text-xl lg:text-2xl opacity-80 text-wrap max-w-3xl">
        Self-taught full-stack developer with a passion for building efficient,
        scalable, and user-friendly web applications. Always learning and
        exploring new technologies to enhance both frontend and backend
        development.
      </h2>

      <nav class="flex gap-3 mt-8 flex-wrap">
        <SocialPill
          href="https://www.linkedin.com/in/santiago-barragan-real"
          class="flex gap-x-2"
        >
          <LinkedInIcon class="size-4 md:size-6" />LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/Santiagobr4" class="flex gap-x-2">
          <GitHubIcon class="size-4 md:size-6" />GitHub
        </SocialPill>
        <SocialPill href="mailto:santiagobr.44@gmail.com" class="flex gap-x-2">
          <EmailIcon class="size-4 md:size-6" />santiagobr.44@gmail.com
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer id="experience">
      <h2
        class="text-2xl md:text-3xl font-semibold mb-6 flex gap-x-3 items-center"
      >
        <BriefcaseIcon class="size-4 md:size-6" />Background & Journey
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="projects">
      <h2
        class="text-2xl md:text-3xl font-semibold mb-6 flex gap-x-3 items-center"
      >
        <CodeIcon class="size-4 md:size-6" />Projects
      </h2>
      <Projects />
    </SectionContainer>

    <SectionContainer id="about" class="py-16">
      <h2
        class="text-2xl md:text-3xl font-semibold mb-4 flex gap-x-3 items-center"
      >
        <UserIcon class="size-4 md:size-6" />About Me
      </h2>
      <AboutMe />
    </SectionContainer>

    <SectionContainer id="contact" class="py-16 flex flex-col items-center">
      <h2 class="text-2xl md:text-3xl font-semibold mb-4">Let's Connect!</h2>
      <Contact />
    </SectionContainer>
  </main>
</Layout>
