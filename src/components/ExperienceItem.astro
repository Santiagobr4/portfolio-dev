---
interface Props {
  date: string;
  title: string;
  description: string;
  link?: string;
}

const { date, title, description, link } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-slate-900/90 dark:bg-neutral-400 rounded-full mt-1.5 -start-1.5 border border-slate-900/80 dark:border-white/10"
>
</div>
<time class="text-sm font-normal leading-none dark:text-white/50">{date}</time>
<h3 class="text-lg font-semibold dark:text-white my-2">
  {title}
</h3>
<p class="mb-4 text-base font-normal dark:text-white opacity-80 text-pretty">
  {description}
</p>
{
  link && (
    <a
      href={link}
      class="inline-flex items-center rounded-full border border-slate-900/10 dark:border-white/10 justify-center gap-x-2 py-2 px-4 bg-slate-900/5 hover:scale-105 hover:bg-slate-900/10 dark:hover:bg-white/10 transition"
    >
      Learn more
      <svg
        class="size-4 ms-1.5 -me-0.5"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        fill="none"
        viewBox="0 0 24 24"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 12H5m14 0-4 4m4-4-4-4"
        />
      </svg>
    </a>
  )
}
