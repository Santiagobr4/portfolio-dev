---
import AstroIcon from "../icons/Astro.astro";
import TailwindCSSIcon from "../icons/TailwindCSS.astro";
import LinkButton from "./LinkButton.astro";
import GitHubIcon from "../icons/GitHub.astro";
import LinkIcon from "../icons/Link.astro";

const TAGS = {
  ASTRO: {
    name: "Astro",
    class: "bg-black/20 text-white",
    icon: AstroIcon,
  },
  TAILWINDCSS: {
    name: "Tailwind CSS",
    class: "bg-white text-[#73bcf6]",
    icon: TailwindCSSIcon,
  },
};

const PROJECTS = [
  {
    title: "Portfolio Website",
    description:
      "A personal portfolio website built with Astro and Tailwind CSS.",
    link: "https://vercel.com/geist/icons",
    github: "https://github.com/Santiagobr4",
    image: "/projects/portfolio-dev.webp",
    tags: [TAGS.ASTRO, TAGS.TAILWINDCSS],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt="Recién llegado vs 5 años en Nueva Zelanda"
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-slate-900 dark:text-white">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs py-1 px-2 border border-slate-900/60 dark:border-white/10`}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-slate-900 dark:text-white opacity-80">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHubIcon class="size-6" />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <LinkIcon class="size-6" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
